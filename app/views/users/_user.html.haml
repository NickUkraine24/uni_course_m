.card
  .card-header
    .fa.fa-user
    = user.email
  .card-footer
    Signed up
    = time_ago_in_words(user.created_at)
    ago
  .card-footer
    = 'sign_in_count:'.humanize
    = user.sign_in_count.present? ? user.sign_in_count : "Don't know"
    .row
    = 'current_sign_in_at:'.humanize
    = user.current_sign_in_at.present? ? user.current_sign_in_at : "Don't know"
    .row
    = 'last_sign_in_at:'.humanize
    = user.last_sign_in_at.present? ? user.last_sign_in_at : "Don't know"
    .row
    = 'current_sign_in_ip:'.humanize
    = user.current_sign_in_ip.present? ? user.current_sign_in_ip : "Don't know"
    .row
    = 'last_sign_in_ip:'.humanize
    = user.last_sign_in_ip.present? ? user.last_sign_in_ip : "Don't know"
  .card-footer
    Confirmed email?
    - if user.confirmed_at.present?
      .badge.badge-success
        Yes
    - else
      .badge.badge-danger
        No
